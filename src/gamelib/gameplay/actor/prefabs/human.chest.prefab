namespace human_art
{
	enum class chest_type
	{
		topless,
		elemental_robes,
		shirt,
		warrior,
		_count
	};

	std::optional<animation> get_chest(chest_type type, humanoid_skeleton_animation anim_type)
	{
		switch(type)
		{
			case chest_type::topless:
				return animation
				{{
					.frame_textures = {image_id::invisible}
				}};
			break;
			case chest_type::elemental_robes:
				switch(anim_type)
				{
					case humanoid_skeleton_animation::idle:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_elementalrobes_idle0,
								image_id::race_human_equipment_chest_elementalrobes_idle1,
							},
							.fps = 2,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_side:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_elementalrobes_side0,
								image_id::race_human_equipment_chest_elementalrobes_side1,
								image_id::race_human_equipment_chest_elementalrobes_side2,
								image_id::race_human_equipment_chest_elementalrobes_side3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_up:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_elementalrobes_up0,
								image_id::race_human_equipment_chest_elementalrobes_up1,
								image_id::race_human_equipment_chest_elementalrobes_up2,
								image_id::race_human_equipment_chest_elementalrobes_up3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_down:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_elementalrobes_down0,
								image_id::race_human_equipment_chest_elementalrobes_down1,
								image_id::race_human_equipment_chest_elementalrobes_down2,
								image_id::race_human_equipment_chest_elementalrobes_down3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
				}
			break;
			case chest_type::shirt:
				switch(anim_type)
				{
					case humanoid_skeleton_animation::idle:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_shirt_idle0,
								image_id::race_human_equipment_chest_shirt_idle1,
							},
							.fps = 2,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_side:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_shirt_side0,
								image_id::race_human_equipment_chest_shirt_side1,
								image_id::race_human_equipment_chest_shirt_side2,
								image_id::race_human_equipment_chest_shirt_side3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_up:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_shirt_up0,
								image_id::race_human_equipment_chest_shirt_up1,
								image_id::race_human_equipment_chest_shirt_up2,
								image_id::race_human_equipment_chest_shirt_up3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_down:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_shirt_down0,
								image_id::race_human_equipment_chest_shirt_down1,
								image_id::race_human_equipment_chest_shirt_down2,
								image_id::race_human_equipment_chest_shirt_down3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
				}
			break;
			case chest_type::warrior:
				switch(anim_type)
				{
					case humanoid_skeleton_animation::idle:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_warrior_idle0,
								image_id::race_human_equipment_chest_warrior_idle1,
							},
							.fps = 2,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_side:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_warrior_side0,
								image_id::race_human_equipment_chest_warrior_side1,
								image_id::race_human_equipment_chest_warrior_side2,
								image_id::race_human_equipment_chest_warrior_side3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_up:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_warrior_up0,
								image_id::race_human_equipment_chest_warrior_up1,
								image_id::race_human_equipment_chest_warrior_up2,
								image_id::race_human_equipment_chest_warrior_up3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_down:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_chest_warrior_down0,
								image_id::race_human_equipment_chest_warrior_down1,
								image_id::race_human_equipment_chest_warrior_down2,
								image_id::race_human_equipment_chest_warrior_down3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
				}
			break;
		}
		return std::nullopt;
	}
}
