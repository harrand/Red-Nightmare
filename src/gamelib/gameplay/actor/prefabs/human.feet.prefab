namespace human_art
{
	enum class feet_type
	{
		bare,
		dots,
		_count
	};
	
	inline std::optional<animation> get_feet(feet_type type, humanoid_skeleton_animation anim_type)
	{
		TZ_PROFZONE("human art - get feet", 0xff880077);
		switch(type)
		{
			case feet_type::bare:
				return animation
				{{
					.frame_textures = {image_id::invisible}
				}};
			break;
			case feet_type::dots:
				switch(anim_type)
				{
					case humanoid_skeleton_animation::idle:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_feet_dot_idle0
							},
							.fps = 1,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_side:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_feet_dot_side0,
								image_id::race_human_equipment_feet_dot_side1,
								image_id::race_human_equipment_feet_dot_side2,
								image_id::race_human_equipment_feet_dot_side3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_up:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_feet_dot_up0,
								image_id::race_human_equipment_feet_dot_up1,
								image_id::race_human_equipment_feet_dot_up2,
								image_id::race_human_equipment_feet_dot_up3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_down:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_equipment_feet_dot_down0,
								image_id::race_human_equipment_feet_dot_down1,
								image_id::race_human_equipment_feet_dot_down2,
								image_id::race_human_equipment_feet_dot_down3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
				}
			break;
		}
		return std::nullopt;
	}
}
