namespace human_art
{
	enum class hair_style
	{
		bald,
		long_hair,
		lord,
		prince,
		_count
	};

	inline std::optional<animation> get_hair(hair_style style, humanoid_skeleton_animation anim_type)
	{
		TZ_PROFZONE("human art - get hair", 0xff880077);
		switch(style)
		{
			case hair_style::bald:
				return animation
				{{
					.frame_textures = {image_id::invisible}
				}};
			break;
			case hair_style::long_hair:
				switch(anim_type)
				{
					case humanoid_skeleton_animation::idle:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_long_idle0,
								image_id::race_human_hair_long_idle1
							},
							.fps = 2,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_side:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_long_side0,
								image_id::race_human_hair_long_side1,
								image_id::race_human_hair_long_side2,
								image_id::race_human_hair_long_side3
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_up:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_long_up0,
								image_id::race_human_hair_long_up1,
								image_id::race_human_hair_long_up2,
								image_id::race_human_hair_long_up3
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_down:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_long_down0,
								image_id::race_human_hair_long_down1,
								image_id::race_human_hair_long_down2,
								image_id::race_human_hair_long_down3
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::cast:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_long_cast0,
								image_id::race_human_hair_long_cast0,
								image_id::race_human_hair_long_cast0,
								image_id::race_human_hair_long_cast1,
								image_id::race_human_hair_long_cast1,
								image_id::race_human_hair_long_cast1,
								image_id::race_human_hair_long_cast0,
								image_id::race_human_hair_long_cast0,
							},
							.fps = 7,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::death:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_long_death0,
								image_id::race_human_hair_long_death1,
								image_id::race_human_hair_long_death2,
								image_id::race_human_hair_long_death3,
								image_id::race_human_hair_long_death4,
								image_id::race_human_hair_long_death5,
								image_id::race_human_hair_long_death6,
								image_id::race_human_hair_long_death6,
								image_id::race_human_hair_long_death6,
								image_id::race_human_hair_long_death7,
								image_id::race_human_hair_long_death8,
								image_id::race_human_hair_long_death9,
							},
							.fps = 14,
							.loop = false
						}};
					break;
				}
			break;
			case hair_style::lord:
				switch(anim_type)
				{
					case humanoid_skeleton_animation::idle:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_lord_idle0,
								image_id::race_human_hair_lord_idle1,
							},
							.fps = 2,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_side:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_lord_side0,
								image_id::race_human_hair_lord_side1,
								image_id::race_human_hair_lord_side2,
								image_id::race_human_hair_lord_side3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_up:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_lord_up0,
								image_id::race_human_hair_lord_up1,
								image_id::race_human_hair_lord_up2,
								image_id::race_human_hair_lord_up3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_down:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_lord_down0,
								image_id::race_human_hair_lord_down1,
								image_id::race_human_hair_lord_down2,
								image_id::race_human_hair_lord_down3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::cast:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_lord_cast0,
								image_id::race_human_hair_lord_cast0,
								image_id::race_human_hair_lord_cast0,
								image_id::race_human_hair_lord_cast1,
								image_id::race_human_hair_lord_cast1,
								image_id::race_human_hair_lord_cast1,
								image_id::race_human_hair_lord_cast0,
								image_id::race_human_hair_lord_cast0,
							},
							.fps = 7,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::death:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_lord_death0,
								image_id::race_human_hair_lord_death1,
								image_id::race_human_hair_lord_death2,
								image_id::race_human_hair_lord_death3,
								image_id::race_human_hair_lord_death4,
								image_id::race_human_hair_lord_death5,
								image_id::race_human_hair_lord_death6,
								image_id::race_human_hair_lord_death6,
								image_id::race_human_hair_lord_death6,
								image_id::race_human_hair_lord_death7,
								image_id::race_human_hair_lord_death8,
								image_id::race_human_hair_lord_death9,
							},
							.fps = 14,
							.loop = false
						}};
					break;
				}
			break;
			case hair_style::prince:
				switch(anim_type)
				{
					case humanoid_skeleton_animation::idle:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_prince_idle0,
								image_id::race_human_hair_prince_idle1,
							},
							.fps = 2,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_side:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_prince_side0,
								image_id::race_human_hair_prince_side1,
								image_id::race_human_hair_prince_side2,
								image_id::race_human_hair_prince_side3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_up:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_prince_up0,
								image_id::race_human_hair_prince_up1,
								image_id::race_human_hair_prince_up2,
								image_id::race_human_hair_prince_up3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::move_down:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_prince_down0,
								image_id::race_human_hair_prince_down1,
								image_id::race_human_hair_prince_down2,
								image_id::race_human_hair_prince_down3,
							},
							.fps = 6,
							.loop = true
						}};
					break;
					case humanoid_skeleton_animation::cast:
						return animation
						{{
							.frame_textures =
							{
								image_id::race_human_hair_prince_cast0,
								image_id::race_human_hair_prince_cast0,
								image_id::race_human_hair_prince_cast0,
								image_id::race_human_hair_prince_cast1,
								image_id::race_human_hair_prince_cast1,
								image_id::race_human_hair_prince_cast1,
								image_id::race_human_hair_prince_cast0,
								image_id::race_human_hair_prince_cast0,
							},
							.fps = 7,
							.loop = true
						}};
					break;
				}
			break;
		}
		return std::nullopt;
	}
}
