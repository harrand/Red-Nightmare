return spell
{
	.cast =
	{
		.colour = {0.5f, 0.0f, 0.8f},
		.cast_time_seconds = 10.0f
	},
	.function = [](actor& a, actor_system& sys, const update_context& ctx)->combat_events
	{
		combat_events ret;
		for(auto& victim : sys.container())
		{
			if(victim.uuid == a.uuid || !victim.entity.has_component<actor_component_id::damageable>())
			{
				continue;
			}
			ret.push_back
			({
				.caster_uuid = a.uuid,
				.target_uuid = victim.uuid,
				.type = combat_text_type::damage,
				.value = 99999,
				.damage_type = {combat_damage_type::shadow, combat_damage_type::fire}
			});
		}
		return ret;
	},
	.name = "Hand of Death"
};
